<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="14.0">
  <Import Project="..\Heleonix.Build.Intellisense.proj" Condition="1 == 0"/>

  <Target Name="Hxb-Rebuild-Initialize" DependsOnTargets="_Hxb-Find-Sln">
    <PropertyGroup>
      <Hxb-Rebuild-In-Artifacts-Dir Condition="'$(Hxb-Rebuild-In-Artifacts-Dir)' == ''">$(Hxb-Build-Artifacts-Dir)\Hxb-Rebuild</Hxb-Rebuild-In-Artifacts-Dir>
    </PropertyGroup>

    <ItemGroup>
      <Hxb-Rebuild-In-Sln Condition="'@(Hxb-Rebuild-In-Sln)' == ''" Include="@(_Hxb-Find-Sln-Out-Sln)">
        <WithSubDirsFrom>$(Hxb-Setup-Workspace-Dir)</WithSubDirsFrom>
      </Hxb-Rebuild-In-Sln>
    </ItemGroup>

    <OnError ExecuteTargets="Hxb-OnError"/>
  </Target>

  <Target Name="Hxb-Rebuild" DependsOnTargets="Hxb-Rebuild-Initialize">
    <Error Condition="'@(Hxb-Rebuild-In-Sln)' == ''" Text="'@Hxb-Rebuild-In-Sln' is not found."/>

    <PropertyGroup>
      <_Hxb-Rebuild-Common-Props Condition="'$(Hxb-In-Configuration)' != ''">Configuration=$(Hxb-In-Configuration)</_Hxb-Rebuild-Common-Props>
      <_Hxb-Rebuild-Common-Props Condition="'$(Hxb-In-Platform)' != ''">$(_Hxb-Rebuild-Common-Props);Platform=$(Hxb-In-Platform)</_Hxb-Rebuild-Common-Props>
    </PropertyGroup>

    <!--Clean-->
    <MSBuild Targets="Clean" Projects="@(Hxb-Rebuild-In-Sln)" Properties="$(_Hxb-Rebuild-Common-Props)"/>

    <Delete Files="@(Hxb-Rebuild-In-Delete)"/>

    <RemoveDir Directories="@(Hxb-Rebuild-In-Delete-Dirs);$(Hxb-Rebuild-In-Artifacts-Dir)"/>

    <Heleonix.Build.Tasks.DirectoryClean Dirs="@(Hxb-Rebuild-In-Clean-Dirs)"/>

    <!--Build-->
    <PropertyGroup>
      <_Hxb-Rebuild-Sign-Props Condition="Exists('@(Hxb-Rebuild-In-Snk)')">SignAssembly=true;AssemblyOriginatorKeyFile=&quot;@(Hxb-Rebuild-In-Snk)&quot;</_Hxb-Rebuild-Sign-Props>
    </PropertyGroup>

    <ItemGroup>
      <_Hxb-Rebuild-AssemblyInfo Include="$(_Hxb-Find-Sln-Out-SlnDir)\**\*AssemblyInfo.*"
                                 Exclude="$(_Hxb-Find-Sln-Out-SlnDir)\packages\**\*AssemblyInfo.*"/>
    </ItemGroup>

    <Heleonix.Build.Tasks.FileUpdate Condition="'$(Hxb-Build-Version)' != ''"
                                     File="%(_Hxb-Rebuild-AssemblyInfo.FullPath)"
                                     RegExp="(?&lt;=AssemblyVersion)\s*\(\s*&quot;\d+\.\d+\.\d+\.[\d\*]+&quot;\s*\)"
                                     Replacement="(&quot;$(Hxb-Build-Version)&quot;)"/>
    <Heleonix.Build.Tasks.FileUpdate Condition="'$(Hxb-Build-Version)' != ''"
                                     File="%(_Hxb-Rebuild-AssemblyInfo.FullPath)"
                                     RegExp="(?&lt;=AssemblyFileVersion)\s*\(\s*&quot;\d+\.\d+\.\d+\.[\d\*]+&quot;\s*\)"
                                     Replacement="(&quot;$(Hxb-Build-Version)&quot;)"/>
    <Heleonix.Build.Tasks.FileUpdate Condition="'$(Hxb-Build-Version-Informational)' != ''"
                                     File="%(_Hxb-Rebuild-AssemblyInfo.FullPath)"
                                     RegExp="(?&lt;=AssemblyInformationalVersion)\s*\(\s*&quot;\d+\.\d+\.\d+\.[\d\*]+&quot;\s*\)"
                                     Replacement="(&quot;$(Hxb-Build-Version-Informational)&quot;)"/>

    <MSBuild Targets="Build" Projects="@(Hxb-Rebuild-In-Sln)" Properties="$(_Hxb-Rebuild-Common-Props);$(_Hxb-Rebuild-Sign-Props)">
      <Output TaskParameter="TargetOutputs" ItemName="Hxb-Rebuild-Out-Outputs"/>
    </MSBuild>

    <OnError ExecuteTargets="Hxb-OnError"/>
  </Target>

  <Target Name="Hxb-Rebuild-Finalize" AfterTargets="Hxb-Rebuild">
    <MakeDir Directories="$(Hxb-Rebuild-In-Artifacts-Dir)"/>

    <!--Copy the solution file-->
    <Heleonix.Build.Tasks.FileCopy Files="@(Hxb-Rebuild-In-Sln)" Destinations="$(Hxb-Rebuild-In-Artifacts-Dir)" Overwrite="true"/>

    <!--Copy relevant projects files-->
    <ItemGroup>
      <_Hxb-Rebuild-Proj Include="$(_Hxb-Find-Sln-Out-SlnDir)\**\*.*proj"
                         Exclude="$(_Hxb-Find-Sln-Out-SlnDir)\packages\**\*.*proj">
        <WithSubDirsFrom>$(Hxb-Setup-Workspace-Dir)</WithSubDirsFrom>
      </_Hxb-Rebuild-Proj>
    </ItemGroup>
    <Heleonix.Build.Tasks.FileCopy Files="@(_Hxb-Rebuild-Proj)" Destinations="$(Hxb-Rebuild-In-Artifacts-Dir)" Overwrite="true"/>

    <!--Copy relevant nuspec files-->
    <ItemGroup>
      <_Hxb-Rebuild-Nuspec Include="$(_Hxb-Find-Sln-Out-SlnDir)\**\*.nuspec"
                           Exclude="$(_Hxb-Find-Sln-Out-SlnDir)\packages\**\*.nuspec">
        <WithSubDirsFrom>$(Hxb-Setup-Workspace-Dir)</WithSubDirsFrom>
      </_Hxb-Rebuild-Nuspec>
    </ItemGroup>
    <Heleonix.Build.Tasks.FileCopy Files="@(_Hxb-Rebuild-Nuspec)" Destinations="$(Hxb-Rebuild-In-Artifacts-Dir)" Overwrite="true"/>

    <!--Copy relevant bin folders-->
    <PropertyGroup>
      <_Hxb-Rebuild-OutputsTemplates>@(Hxb-Rebuild-Out-Outputs -> '%(RootDir)%(Directory)**\*.*')</_Hxb-Rebuild-OutputsTemplates>
    </PropertyGroup>
    <ItemGroup>
      <_Hxb-Rebuild-Outputs Include="$(_Hxb-Rebuild-OutputsTemplates)">
        <WithSubDirsFrom>$(Hxb-Setup-Workspace-Dir)</WithSubDirsFrom>
      </_Hxb-Rebuild-Outputs>
    </ItemGroup>
    <Heleonix.Build.Tasks.FileCopy Files="@(_Hxb-Rebuild-Outputs)" Destinations="$(Hxb-Rebuild-In-Artifacts-Dir)" Overwrite="true"/>
    
    <!--Copy extra outputs-->
    <Heleonix.Build.Tasks.FileCopy Files="@(Hxb-Rebuild-Finalize-In-ExtraOutputs)" Destinations="$(Hxb-Rebuild-In-Artifacts-Dir)" Overwrite="true"/>

    <OnError ExecuteTargets="Hxb-OnError"/>
  </Target>
</Project>