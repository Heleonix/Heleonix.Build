<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="14.0">
  <Import Project="..\Heleonix.Build.Intellisense.proj" Condition="1 == 0"/>

  <PropertyGroup>
    <Hxb-In-Configuration Condition="'$(Hxb-In-Configuration)' == ''">Release</Hxb-In-Configuration>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Hxb-Setup-CI)' == ''">
    <Hxb-Setup-CI>Dev</Hxb-Setup-CI>
    <Hxb-Setup-CI Condition="'$(GO_PIPELINE_COUNTER)' != ''">GoCD</Hxb-Setup-CI>
    <Hxb-Setup-Workspace-Dir Condition="'$(GO_PIPELINE_COUNTER)' != ''">$(MSBuildStartupDirectory)</Hxb-Setup-Workspace-Dir>
    <Hxb-Setup-CI Condition="'$(JENKINS_URL)' != ''">Jenkins</Hxb-Setup-CI>
    <Hxb-Setup-Workspace-Dir Condition="'$(JENKINS_URL)' != ''">$(WORKSPACE)</Hxb-Setup-Workspace-Dir>
    <Hxb-Setup-CI Condition="'$(TEAMCITY_VERSION)' != ''">TeamCity</Hxb-Setup-CI>
    <Hxb-Setup-Workspace-Dir Condition="'$(TEAMCITY_VERSION)' != ''">$(system_agent_work_dir)</Hxb-Setup-Workspace-Dir>
  </PropertyGroup>

  <PropertyGroup>
    <Hxb-Setup-Workspace-Flows Condition="'$(Hxb-Setup-Workspace-Flows)' == ''">$(Hxb-Setup-Workspace-Dir)\Build.proj</Hxb-Setup-Workspace-Flows>
  </PropertyGroup>

  <Target Name="Hxb-Initialize">
    <Error Condition="'$(Hxb-In-Flow)' == ''" Text="'$Hxb-In-Flow' is not defined."/>

    <Error Condition="'$(Hxb-Setup-CI)' == ''" Text="'$Hxb-Setup-CI' is not defined."/>
    <Error Condition="!Exists('$(Hxb-Setup-Workspace-Dir)')" Text="'$Hxb-Setup-Workspace-Dir' is not found."/>

    <PropertyGroup Condition="'$(Hxb-Build-Artifacts-Dir)' == ''">
      <Hxb-Build-Artifacts-Dir>$(Hxb-Setup-Workspace-Dir)\Hxb-Artifacts</Hxb-Build-Artifacts-Dir>
      <Hxb-Build-Artifacts-Dir Condition="'$(Hxb-In-Configuration)' != ''">$(Hxb-Build-Artifacts-Dir)\$(Hxb-In-Configuration)</Hxb-Build-Artifacts-Dir>
      <Hxb-Build-Artifacts-Dir Condition="'$(Hxb-In-Platform)' != ''">$(Hxb-Build-Artifacts-Dir)\$(Hxb-In-Platform)</Hxb-Build-Artifacts-Dir>
    </PropertyGroup>

    <Heleonix.Build.Tasks.FileSystemSearch StartDir="$(Hxb-Setup-Workspace-Dir)"
                                           Direction="Up"
                                           Types="Directories"
                                           PathRegExp="\.git$">
      <Output TaskParameter="FoundDirs" ItemName="_Hxb-Build-VCS-Git-Dir"/>
    </Heleonix.Build.Tasks.FileSystemSearch>
    <Heleonix.Build.Tasks.FileSystemSearch StartDir="$(Hxb-Setup-Workspace-Dir)"
                                           Direction="Up"
                                           Types="Directories"
                                           PathRegExp="\.svn$">
      <Output TaskParameter="FoundDirs" ItemName="_Hxb-Build-VCS-Svn-Dir"/>
    </Heleonix.Build.Tasks.FileSystemSearch>
    <PropertyGroup>
      <Hxb-Build-VCS Condition="Exists('@(_Hxb-Build-VCS-Git-Dir)')">Git</Hxb-Build-VCS>
      <Hxb-Build-VCS Condition="Exists('@(_Hxb-Build-VCS-Svn-Dir)')">Svn</Hxb-Build-VCS>
    </PropertyGroup>

    <PropertyGroup>
      <Hxb-Build-Verbosity Condition="'$(Hxb-Build-Verbosity)' == ''">Normal</Hxb-Build-Verbosity>
    </PropertyGroup>

    <PropertyGroup>
      <Hxb-Build-Version>$(Hxb-In-Version)</Hxb-Build-Version>
    </PropertyGroup>
    <PropertyGroup Condition="'$(Hxb-In-Version)' == '' And '$(Hxb-Setup-CI)' == 'Jenkins'">
      <Hxb-Build-Version>$([System.Text.RegularExpressions.Regex]::Match('\d*\.\d*\.\d*$', '$(BRANCH_NAME)'))</Hxb-Build-Version>
      <Hxb-Build-Version Condition="'$(Hxb-Build-Version)' != '' And '$(BUILD_NUMBER)' != ''">$(Hxb-Build-Version).$(BUILD_NUMBER)</Hxb-Build-Version>
    </PropertyGroup>
    <PropertyGroup Condition="'$(Hxb-In-Version)' == '' And '$(Hxb-Setup-CI)' == 'TeamCity'">
      <Hxb-Build-Version>$([System.Text.RegularExpressions.Regex]::Match('\d*\.\d*\.\d*$', '$(teamcity_build_branch)'))</Hxb-Build-Version>
      <Hxb-Build-Version Condition="'$(Hxb-Build-Version)' != '' And '$(BUILD_NUMBER)' != ''">$(Hxb-Build-Version).$(BUILD_NUMBER)</Hxb-Build-Version>
    </PropertyGroup>
    <ItemGroup Condition="'$(Hxb-In-Version)' == '' And '$(Hxb-Setup-CI)' == 'GoCD'">
      <_Hxb-Initialize-CurrentBranchSourceName Include="$(GO_SCM_CURRENT_BRANCH_SOURCE_NAME)"/>
    </ItemGroup>
    <PropertyGroup Condition="'$(Hxb-In-Version)' == '' And '$(Hxb-Setup-CI)' == 'GoCD'">
      <Hxb-Build-Version>$([System.Text.RegularExpressions.Regex]::Match('\d*\.\d*\.\d*$', '$(%(_Hxb-Initialize-CurrentBranchSourceName.Identity))'))</Hxb-Build-Version>
      <Hxb-Build-Version Condition="'$(Hxb-Build-Version)' != '' And '$(GO_PIPELINE_COUNTER)' != ''">$(Hxb-Build-Version).$(GO_PIPELINE_COUNTER)</Hxb-Build-Version>
    </PropertyGroup>
    <PropertyGroup>
      <Hxb-Build-Version-Informational>$(Hxb-Build-Version)</Hxb-Build-Version-Informational>
    </PropertyGroup>

    <Message Text="Primary initialization:"/>

    <Message Text="$Hxb-In-Configuration: $(Hxb-In-Configuration)"/>
    <Message Text="$Hxb-In-Flow: $(Hxb-In-Flow)"/>
    <Message Text="$Hxb-In-Overrides: $(Hxb-In-Overrides)"/>
    <Message Text="$Hxb-In-Platform: $(Hxb-In-Platform)"/>
    <Message Text="$Hxb-In-Version: $(Hxb-In-Version)"/>
    <Message Text="$Hxb-Setup-Workspace-Dir: $(Hxb-Setup-Workspace-Dir)"/>
    <Message Text="$Hxb-Setup-CI: $(Hxb-Setup-CI)"/>
    <Message Text="$Hxb-Setup-Workspace-Flows: $(Hxb-Setup-Workspace-Flows)"/>
    <Message Text="$Hxb-Build-Version: $(Hxb-Build-Version)"/>
    <Message Text="$Hxb-Build-Version-Informational: $(Hxb-Build-Version-Informational)"/>
    <Message Text="$Hxb-Build-Artifacts-Dir: $(Hxb-Build-Artifacts-Dir)"/>
    <Message Text="$Hxb-Build-VCS: $(Hxb-Build-VCS)"/>
    <Message Text="$Hxb-Build-Verbosity: $(Hxb-Build-Verbosity)"/>

    <OnError ExecuteTargets="Hxb-OnError"/>
  </Target>
</Project>